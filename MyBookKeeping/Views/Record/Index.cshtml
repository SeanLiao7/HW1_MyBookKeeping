@model IPagedList<MyBookKeeping.Models.ViewModels.RecordViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMoney.cshtml";
    <link href="~/Content/PagedList.css" rel="stylesheet" />
}

<div class="container body-content">
    <div class="well">
        @using ( Html.BeginForm( "NewPost", "Record", FormMethod.Post, new { @class = "form-horizontal" } ) )
        {
            <div class="form-group">
                @Html.LabelFor( m => m.FirstOrDefault( ).Category, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    <select id="category" class="form-control">
                        <option value="" selected>請選擇</option>
                        <option>支出</option>
                        <option>收入</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.FirstOrDefault( ).Amount, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.EditorFor( m => m.FirstOrDefault( ).Amount, new
               {
                   htmlAttributes = new
                   {
                       type = "text",
                       @class = "form-control",
                       id = "money",
                       placeholder = "Amount",
                   }
               } )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.FirstOrDefault( ).Date, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.EditorFor( m => m.FirstOrDefault( ).Date, new
               {
                   htmlAttributes = new
                   {
                       type = "date",
                       @class = "form-control",
                       id = "date",
                       placeholder = "Date"
                   }
               } )
                </div>
            </div>
            <div class="form-group">
                <label for="description" class="col-sm-2 control-label">備註</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="description">
                </textarea>
                </div>
            </div>
                <div class="form-group">
                    <div class="col-sm-offset-8 col-sm-4">
                        <button class="btn btn-default">送出</button>
                    </div>
                </div>
        }
    </div>
    @Html.Action( "RenderPosts", "Record" )
    <hr />
    <footer>
        <p>
            &copy; 2017 - <a href="#">SkillTree</a>
        </p>
    </footer>
</div>