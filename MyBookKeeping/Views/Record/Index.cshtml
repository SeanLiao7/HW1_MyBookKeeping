@model MyBookKeeping.Models.AccountRecord

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMoney.cshtml";
}

@section Scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

<div class="container body-content">
    <div class="well" id="form_block">
        @using ( Ajax.BeginForm( "NewPost", "Record", new AjaxOptions { UpdateTargetId = "records_block" }, new { @class = "form-horizontal" } ) )
        {
            <div class="form-group">
                @Html.LabelFor( m => m.Category, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.EnumDropDownListFor( m => m.Category, "請選擇", new { @class = "form-control", id = "category" } )
                    @*<select id="category" class="form-control">
                            <option value="" selected>請選擇</option>
                            <option>支出</option>
                            <option>收入</option>
                        </select>*@
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.Amount, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.EditorFor( m => m.Amount, new
               {
                   htmlAttributes = new
                   {
                       type = "text",
                       @class = "form-control",
                       id = "money",
                       placeholder = "金額",
                   }
               } )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.Date, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.EditorFor( m => m.Date, new
               {
                   htmlAttributes = new
                   {
                       type = "date",
                       @class = "form-control",
                       id = "date",
                       placeholder = "日期"
                   }
               } )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.Remark, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.TextAreaFor( m => m.Remark, new { @class = "form-control", id = "description" } )
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>
    <div id="records_block">
        @{
            Html.RenderAction( "RenderPosts", "Record" );
        }
    </div>
    <hr />
    <footer>
        <p>
            &copy; 2017 - <a href="#">SkillTree</a>
        </p>
    </footer>
</div>