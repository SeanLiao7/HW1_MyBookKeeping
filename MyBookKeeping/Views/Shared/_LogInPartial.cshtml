@if ( Request.IsAuthenticated )
{
    using ( Html.BeginForm( "LogOut", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" } ) )
    {
        @Html.AntiForgeryToken( )

        <ul class="nav navbar-nav navbar-right">
            <li>
                <a href="@Url.Action( "Index", "Record" )" title="Record">@Html.getGreetingString( User.Identity.GetUserName( ) )</a>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">登出</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action( "Register", "Account" )" id="registerlink">註冊</a>
        </li>
        <li>
            <a href=@Url.Action( "Login", "Account" ) id="loginlink">登入</a>
        </li>
    </ul>
}