@model MyBookKeeping.Models.ViewModels.SearchViewModel

@{
    ViewBag.Title = "Index";
}

@section Scripts{
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jQuery.Validate.Customplugin.js"></script>
    <script src="~/Scripts/jQuery.Ajax.Authorize.js"></script>
    <script src="~/Scripts/pickadate/picker.js"></script>
    <script src="~/Scripts/pickadate/picker.date.js"></script>
}

<div class="container body-content">
    <div class="well form-horizontal" id="form_block">
        @using ( Ajax.BeginForm( new AjaxOptions { UpdateTargetId = "recordsblock", Url = Url.Action( "AjaxPosts" ), HttpMethod = "POST" } ) )
        {
            @Html.AntiForgeryToken( )
            <div class="form-group">
                @Html.LabelFor( m => m.Year, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.DropDownList( "Year", ( IEnumerable<SelectListItem> ) ViewData[ "year" ], new { @class = "form-control" } )
                    @Html.ValidationMessageFor( m => m.Year, "", new { @class = "text-danger" } )
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor( m => m.Month, new { @class = "col-sm-2 control-label" } )
                <div class="col-sm-10">
                    @Html.DropDownList( "Month", ( IEnumerable<SelectListItem> ) ViewData[ "month" ], new { @class = "form-control" } )
                    @Html.ValidationMessageFor( m => m.Month, "", new { @class = "text-danger" } )
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-8 col-sm-4">
                    <button class="btn btn-default">送出</button>
                </div>
            </div>
        }
    </div>
    <div id="recordsblock">
        @Html.Action( "RenderParialView", "Search" )
    </div>
    <hr />
    <footer>
        <p>
            &copy; 2017 - <a href="#">SkillTree</a>
        </p>
    </footer>
</div>